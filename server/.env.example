# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:4200

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
ACCESS_TOKEN_SECRET=change_me_access_secret_min_32_chars
REFRESH_TOKEN_SECRET=change_me_refresh_secret_min_32_chars
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Cookie Secret (CHANGE THIS IN PRODUCTION!)
COOKIE_SECRET=change_me_cookie_secret_min_32_chars

# Database Configuration
POSTGRES_DB=healthcare
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Encryption Key (REQUIRED IN PRODUCTION!)
DATABASE_ENCRYPTION_KEY=change_me_encryption_key_64_hex_chars

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# HTTPS Configuration
# Set to true to enable HTTPS server
USE_HTTPS=false

# HTTPS port (default: 4443 for development, 443 for production)
HTTPS_PORT=4443

# SSL Certificate paths (required if USE_HTTPS=true)
# For development, run: npm run generate-certs
# For production, use certificates from a trusted CA
# SSL_CERT_PATH=server/certs/server.crt
# SSL_KEY_PATH=server/certs/server.key
# SSL_CA_PATH=server/certs/ca.crt  # Optional: for certificate chain
